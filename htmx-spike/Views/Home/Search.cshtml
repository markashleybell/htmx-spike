@model SearchViewModel

@{
    ViewData["Title"] = "Search";
}

<h1>@(Model.Results.Any() ? $"Results for '{Model.Query}'" : "Search")</h1>

<form asp-action="Search"
      asp-controller="Home"
      method="get"
      class="row mt-3"
      hx-boost="true"
      hx-indicator="#loader">

    <div class="col-auto">
        <input type="search"
               asp-for="Query"
               class="form-control"
               autocomplete="off"
               hx-get="@(Url.Action("SearchResults", "Home"))"
               hx-target=".results"
               hx-trigger="keyup changed delay:250ms"
               hx-indicator="#loader" />
    </div>

    <div class="col-auto">
        <button class="btn btn-primary" type="submit">Search</button>
        <img src="~/img/three-dots.svg" id="loader" class="htmx-indicator" width="60" alt="Loading">
    </div>

</form>

@await Html.PartialAsync("_SearchResults")
